@model  _5Bites.Models.StorePublicViewModel

@{
    ViewBag.Title = Model.StoreName;
}

<h2>@Model.StoreName</h2>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Inventory.Count; ++i)
        {
            <tr>
                <td>@Html.ValueFor(m => m.Inventory[i].Name)</td>
                <td>@Html.ValueFor(m => m.Inventory[i].Price, "{0:C2}")</td>
                <td>@Html.ValueFor(m => m.Inventory[i].Quantity)</td>
            </tr>
        }
    </tbody>
</table>