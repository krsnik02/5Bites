@model _5Bites.Models.StoreSellViewModel

<h2>@Model.StoreName</h2>

@using(Html.BeginForm("Sell", "Store"))
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Inventory.Count; ++i)
            {
                @Html.HiddenFor(m => m.Inventory[i].Id)
                @Html.HiddenFor(m => m.Inventory[i].Price)
                <tr>
                    <td>@Html.ValueFor(m => m.Inventory[i].Name)</td>
                    <td>@Html.ValueFor(m => m.Inventory[i].Price, "{0:C2}")</td>
                    <td>@Html.TextBoxFor(m => m.Inventory[i].Quantity, new { @Value = 0 }) 
                        of @Html.ValueFor(m => m.Inventory[i].Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Sell" />
}
