<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Images/5BitesLogo.jpg")" width=100 height=100></a></p>
                    
                </div>
                <div class="float-right">
                    <section id="login">
                        @if (Session.Contents["EmployeeId"] == null)
                        {
                            @Html.ActionLink("Login", "Login", "Employee")
                        }
                        else
                        {
                            @Html.FormatValue((string)Session.Contents["EmployeeName"], "Welcome {0}!")
                            @Html.ActionLink("Account", "Account", "Employee")
                            @Html.ActionLink("Logout", "Logout", "Employee")
                        }
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        <script src="~/Scripts/jquery.dataTables.min.js"></script>

        @Styles.Render("~/Content/themes/base/css")
        <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">

        @RenderSection("scripts", required: false)
    </body>
</html>
