@model _5Bites.Models.Store_.Sell.StoreModel

@{ Html.EnableClientValidation(); }
@using (Html.BeginForm("ConfirmSale", "Store"))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Name)
    @Html.FormatValue(Model.Bank, "{0:C2}")

    <table class="datatable">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Inventory.Count; ++i)
            {
                <tr>
                    @Html.HiddenFor(m => m.Inventory[i].Id)
                    @Html.HiddenFor(m => m.Inventory[i].Description)
                    @Html.HiddenFor(m => m.Inventory[i].Price)
                    <td>@Html.FormatValue(Model.Inventory[i].Description, "{0}")</td>
                    <td>@Html.FormatValue(Model.Inventory[i].Price, "{0:C2}")</td>
                    <td>@Html.TextBoxFor(m => m.Inventory[i].Quantity, new { @Value = 0 })
                        (of @Html.FormatValue(Model.Inventory[i].Quantity, "{0}"))
                        @Html.ValidationMessageFor(m => m.Inventory[i].Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Sell" />
}