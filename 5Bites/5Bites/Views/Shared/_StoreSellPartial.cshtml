@model _5Bites.Models.Store.Sell.StoreModel

@using (Html.BeginForm("Sell", "Store"))
{
    @Html.HiddenFor(m => m.StoreId)
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Inventory.Count; ++i)
            {
                @Html.HiddenFor(m => m.Inventory[i].Id)
                @Html.HiddenFor(m => m.Inventory[i].Price)
                <tr>
                    <td>@Html.FormatValue(Model.Inventory[i].Description, "{0}")</td>
                    <td>@Html.FormatValue(Model.Inventory[i].Price, "{0:C2}")</td>
                    <td>@Html.TextBoxFor(m => m.Inventory[i].Quantity, new { @Value = 0 })
                        of @Html.FormatValue(Model.Inventory[i].Quantity, "{0}")
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Sell" />
}